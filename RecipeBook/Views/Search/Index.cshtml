@using RecipeBook.Models;

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Search Results</h2>

            @if (Model.GetType() == typeof(List<Recipe>))
            {
                @if (Model.Count == 0)
                {
                    <h4>No recipes match the search term.</h4>
                }

                @foreach (Recipe r in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h3>@Html.ActionLink($"{r.Name}", "Details", "Recipes", new { id = r.RecipeId })</h3>
                        </div>
                    </div>
                }
            }

            @if (Model.GetType() == typeof(List<Ingredient>))
            {
                @if (Model.Count == 0)
                {
                    <h4>No Ingredients match the search term.</h4>
                }

                @foreach (Ingredient i in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h3>@Html.ActionLink($"{i.Name}", "Details", "Ingredients", new { id = i.IngredientId })</h3>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>


