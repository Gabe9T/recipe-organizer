@using RecipeBook.Models;

<h2>Recipes</h2>

@if (Model.Count == 0)
{
    <h4>No recipes have been submitted.</h4>
}

@foreach (Recipe r in Model)
{
    <h3>@Html.ActionLink($"{r.Name}", "Details", new { id = r.RecipeId })</h3>
    <img src="@r.ImageUrl" alt="Recipe Image">
    <hr />
}

@if (User.Identity.IsAuthenticated)
        {
@Html.ActionLink("Add A New Recipe", "Create")
            
        }
        else
        {

        <p>@Html.ActionLink("Login To Add A Recipe", "Login", "Account")</p>
        <p>@Html.ActionLink("Dont Have An Account? Sign Up!", "Register", "Account")</p>
        }