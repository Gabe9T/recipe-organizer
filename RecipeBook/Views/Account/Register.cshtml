@using RecipeBook.ViewModels
@model RegisterViewModel
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Register A New User</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary("Please fix the following error(s) and then resubmit the form:")
                </div>
            }

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                <div class="mb-3">
                    @Html.LabelFor(user => user.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(user => user.Email, new { @class = "form-control", required = "required" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(user => user.Password, new { @class = "form-label" })
                    @Html.PasswordFor(user => user.Password, new { @class = "form-control", required = "required" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(user => user.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control", required = "required" })
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
                <hr />
            }
            @Html.ActionLink("Browse Recipes", "Index", "Recipes", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
